<div class="centercontainer resumepadding">
    <div class="centerrow">
        <div class="centercolumnresume">
        	<div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Apply | Write a Cover Letter</h2>
                </div>
                <div class="panel-body">
                    <%= form_for [@parent, @cover] do |f| %>
        				<div class="form-group">
        					<%= f.bootsy_area :letter, class:"form-control", rows: "4", editor_options: { image: false, font_styles: false, color: false } %>
        				</div>
        				<div class="form-group">
        					<%= f.submit class: "btn btn-success btn-block" %>
						</div>    				
    				<% end %>
                </div>
                <div class="panel-footer">
                    <%= link_to 'Back', :back %>
                </div>
            </div>
        </div>
    </div>
</div>


    