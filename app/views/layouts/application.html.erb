<!DOCTYPE html>
<html>
  <head>
    <title>AY</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application' %>

    <% if user_signed_in?%>
    	<%= render 'pages/header' %>
    <% end %>
  </head>

  <body>
      <% flash.each do |name, msg| %>
          <div class="alert alert-info alert-dismissable text-center animated fadeOut">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <%= content_tag(:div, msg) %>
          </div>
      <% end %>
      <div class="container">
	       <%= yield %>
      </div>
  </body>
</html>
